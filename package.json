{
  "name": "unui",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.18 <23",
    "pnpm": ">=9 <11"
  },
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "prettier -w .",
    "changeset": "changeset",
    "release": "changeset version && pnpm -w i && pnpm -w build && changeset publish",
    "test": "turbo run test",
    "docs": "pnpm -C apps/docs dev",
    "docs:build": "pnpm -C apps/docs build",
    "docs:preview": "pnpm -C apps/docs preview",
    "size": "size-limit",
    "size:ui": "pnpm -C packages/ui size-limit",
    "check:pkg": "pnpm -r --filter ./packages/** exec publint ."
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.7",
    "jsdom": "^27.0.0",
    "publint": "^0.3.13",
    "size-limit": "^11.1.6",
    "tsup": "^8.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.3.0",
      "react-dom": "^18.3.0",
      "@types/react": "18.3.24",
      "@types/react-dom": "18.3.0",
      "whatwg-url": "14.0.0",
      "webidl-conversions": "7.0.0",
      "jsdom": "22.1.0"
    }
  }
}
